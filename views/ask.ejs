<%- include('partials/header.ejs') %>
<body class="body-ask">
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <div class="card" id="form-ask">
            <div class="card-header">
                <h3>Realizar Pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/ask">
                    <label>Título</label>
                    <input type="text" placeholder="Título" class="form-control" name="title"/>
                    <br>
                    <label>Descrição</label>
                    <textarea placeholder="Descreva sua pergunta..." class="form-control" name="desc"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
